<link rel="stylesheet" href="/src/css/header.css" />

<header class="topHeaderComponent">
    <div class="header-inner">
        <a href="/" class="logo" aria-label="Homepage">
            <div class="logo-img"></div>
            <span><b><%= appSettings.name %></b></span>
        </a>
        <div class="menuList">
            <div class="docThemeContainer">
                <nav class="docThemeNav">
                    <ul class="docThemeMenu">
                        <li><a href="/">Homepage</a></li>
                        <li><a href="/guide/">Guide</a></li>
                        <li><a href="/api_reference/">API Reference</a></li>
                        <li><a href="/about/">About</a></li>
                    </ul>
                </nav>

                <ul class="navigationList">
                    <li class="themeBtn">
                        <label class="switch">
                            <input type="checkbox" id="modeToggle">
                            <span class="slider round"></span>
                        </label>
                    </li>
                    <li class="searchBar">
                        <div class="docThemeSearchBox">
                            <button class="searchBtn"></button>
                        </div>
                    </li>
                    <li>
                        <a href="#" aria-label="Github icon">
                            <div class="social-icon github"></div>
                        </a>
                    </li>
                    <li>
                        <div class="docThemeVersionDropdown">
                            <button id="dropdownBtn">Version</button>
                            <div class="dropdown-content">
                                <a href="#">Postdoc 1.1</a>
                                <a href="#">Postdoc 1.2</a>
                                <a href="#">Postdoc 1.3</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="docThemeSearchBox docThemeSearchBoxMobile">
                <button class="searchBtn"></button>
            </div>
            <button class="menuButton">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5M12 17.25h8.25" />
                </svg>
            </button>
        </div>
    </div>
</header>

<div id="mySearchModal" class="searchModal">
    <div class="searchModal-content">
        <input type="text" placeholder="Search docs" name="" id="">
    </div>
</div>

<script type="module" src="/src/js/header.js"></script>
